{
  "name": "sprinkler-repair-saas-backend",
  "version": "1.0.0",
  "description": "Backend API for Sprinkler Repair SaaS - Inspection and CRM platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required for Express.js'",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch --coverage",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:security": "jest --testPathPattern=security --runInBand",
    "migrate": "node src/migrations/runner.js",
    "migrate:old": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:scan": "npm audit && node scripts/generate-secrets.js --validate .env",
    "security:generate": "node scripts/generate-secrets.js --generate",
    "db:setup": "powershell -ExecutionPolicy Bypass -File ../scripts/setup-database.ps1",
    "db:reset": "npm run migrate",
    "db:indexes": "node -e \"const { createIndexes } = require('./src/database/indexes'); createIndexes();\"",
    "db:analyze": "node -e \"const { analyzeDatabase } = require('./src/database/indexes'); analyzeDatabase();\""
  },
  "dependencies": {
    "aws-sdk": "^2.1449.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "html-pdf-node": "^1.0.8",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.17.1",
    "pg": "^8.11.3",
    "puppeteer": "^24.17.0",
    "sqlite3": "^5.1.7",
    "stripe": "^13.11.0",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "express-validator": "^7.0.1",
    "file-type": "^19.0.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.9.0",
    "jest": "^29.6.4",
    "jest-environment-node": "^29.6.4",
    "nodemon": "^3.0.1",
    "sharp": "^0.33.2",
    "supertest": "^6.3.3",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "saas",
    "irrigation",
    "sprinkler",
    "inspection",
    "crm",
    "field-service"
  ],
  "author": "Your Name",
  "license": "MIT"
}
